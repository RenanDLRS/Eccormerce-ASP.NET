        <label>Descrição</label><br />
        <input class="form-control" type="text" asp-for="Descricao"/><br />
    </div>

    <div class="form-group" id="preco">
        <label>Preço</label><br />
        <input class="form-control" type="text" asp-for="Preco"/><br />
    </div>

