@{
}

<form asp-action="Alterar" method="post">
    <div class="form-group" id="id">
        <input type="hidden"  asp-for="Id"/><br />
    </div>
    <div class="form-group" id="nome">
        <label>Nome</label><br />
        <input class="form-control" type="text" asp-for="Nome"/><br />
    </div>

