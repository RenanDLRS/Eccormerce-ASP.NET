@model Produto

@{
}

<form asp-action="Cadastrar" method="post">
    <fieldset>
        <legend>Cadastar Produto</legend>
        <div asp-validation-summary="ModelOnly"></div>

        <div class="form-group" id="nome">
            <label asp-for="Nome"></label>
            <input class="form-control" type="text" asp-for="Nome" /><br />
            <span asp-validation-for="Nome"></span>
        </div>

        <div class="form-group" id="descricao">
            <label asp-for="Descricao"></label>
            <input class="form-control" type="text" asp-for="Descricao" /><br />
            <span asp-validation-for="Descricao"></span>
        </div>

        <div class="form-group" id="preco">
            <label asp-for="Preco"></label>
            <input class="form-control" type="text" asp-for="Preco" /><br />
            <span asp-validation-for="Preco"></span>
        </div>

        <div class="form-group" id="quantidade">
            <label asp-for="Quantidade  "></label>
            <input class="form-control" type="text" asp-for="Quantidade" /><br />
            <span asp-validation-for="Quantidade"></span>
        </div>

        <button type="submit" class="btn btn-primary" aria-pressed="false">Cadastrar </button>

    </fieldset>
</form>

